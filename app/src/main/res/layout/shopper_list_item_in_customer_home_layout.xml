<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F3FFFFFF"
    android:layout_margin="6dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
        <ImageView
            android:id="@+id/iv_shopper_select_Customer_home"
            android:src="@drawable/shop"
           android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="150dp"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/overlay_dark_60"
            android:id="@+id/tv_shopper_discount_Customer_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="bottom"
            android:text="discount % "
            android:textColor="#fff"
            android:textSize="13sp"
            app:fontFamily="sans-serif-medium" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_shopper_name_Customer_home"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                app:fontFamily="sans-serif-medium"
                android:text="Shop name"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" />
        <TextView
            android:id="@+id/tv_shopper_address_Customer_home"
            android:textColor="#8B000000"
            android:textSize="11sp"
            android:layout_marginStart="5dp"
            app:fontFamily="sans-serif-medium"
            android:text="Shop address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <View
        android:background="#80000000"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height=".7dp"/>
</LinearLayout>
