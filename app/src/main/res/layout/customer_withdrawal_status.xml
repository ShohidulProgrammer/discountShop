<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/rejected_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/ll_parent"
            android:padding="5dp"
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="2dp"
                android:id="@+id/name_layout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:background="@color/transparent"
                    android:src="@drawable/in_number"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:text="In Voice Number : "
                    android:textSize="13sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80"
                    app:fontFamily="sans-serif-medium" />
                <TextView
                    android:id="@+id/tv_invoice_number_withdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="12112 "
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    app:fontFamily="sans-serif-medium" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/name_layout0"
                android:padding="2dp"
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_resturant"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:text="Restaurant Name : "
                    android:textSize="13sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80"
                    app:fontFamily="sans-serif-medium" />
                <TextView
                    android:id="@+id/tv_resturant_name_withdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Haji Biriany "
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    app:fontFamily="sans-serif-medium" />
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:id="@+id/phone_layout"
                android:layout_below="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_back_money" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:text="Back Amount : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80"
                    android:textSize="13sp"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_back_amount_withdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="100 /="
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    app:fontFamily="sans-serif-medium"/>

            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:layout_below="@+id/phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_status" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:text="Status : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80"
                    android:textSize="13sp"
                    app:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_status_withdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="UnPaid"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    app:fontFamily="sans-serif-medium"/>

            </LinearLayout>
        </RelativeLayout>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                >
                <ImageView
                    android:id="@+id/iv_paid_status"
                    android:scaleType="fitXY"
                    android:src="@drawable/paid"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:background="#54000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
