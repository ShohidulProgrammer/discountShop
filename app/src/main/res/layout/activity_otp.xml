<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/otp_page"
    android:background="@drawable/login"
    tools:context=".auth.OTPActivity">

    <TextView
        android:layout_above="@+id/et_name"
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:text="***********"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:background="@color/overlay_dark_50"

         />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_name"
        android:layout_above="@+id/pass_container"
        android:hint="Enter your Name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@color/editTextBG"
        android:textIsSelectable="false"
        android:layout_centerInParent="true"
        android:inputType="text"
        android:padding="5dp"
        />

    <LinearLayout
        android:id="@+id/pass_container"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/password"
            android:hint="Enter your Password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="14dp"
            android:background="@color/editTextBG"
            android:textIsSelectable="false"
            android:layout_centerInParent="true"
            android:inputType="textPassword"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/re_type_password"
            android:layout_below="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:textSize="14dp"
            android:gravity="center"
            android:hint="Re-Enter your Password"
            android:background="@color/editTextBG"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_alignParentBottom="true"
        android:text="Continue"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:background="@drawable/buttonshape"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>














