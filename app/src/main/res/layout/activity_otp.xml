    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/loading" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wait_i_sent_you_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="Wait for the code I sent You \nto"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_wait_i_sent_you_verification"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="0100000000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="#000"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone_number"
            android:layout_centerHorizontal="true" />


        <RelativeLayout
            android:id="@+id/code_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="50dp"
            android:layout_below="@+id/progressbar"
            android:background="#fff">

            <com.mukesh.OtpView
                android:id="@+id/otpView"
                android:layout_below="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:inputType="number"
                android:lines="6"
                android:scaleX=".8"
                android:textColor="#CC7CD0"
                app:itemCount="6"
                app:lineColor="#CC7CD0"
                app:lineWidth=".5dp"
                app:viewType="rectangle" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgView_userIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/ic_phone_code"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/et_otp_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgView_userIcon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imgView_userIcon"
                    android:background="@color/white"
                    android:hint="Enter Verification Code"
                    android:inputType="phone"
                    android:maxLength="14"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time_counter"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/code_box"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="100"
            android:textColor="#f00" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <Button
            android:id="@+id/btn_otp_verify"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>