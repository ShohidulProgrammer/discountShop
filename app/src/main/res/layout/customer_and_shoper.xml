<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_height="200dp">

    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/ib_close_dialog"
        android:src="@drawable/ic_close_black"
        android:layout_width="40dp"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_large_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:text="Choice from Here What You Need\nAfter Selected You can Action for this"
            android:textColor="#000"
            android:textSize="15sp"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btngroup"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_customer"
            android:textAlignment="center"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@color/paid_color"
            android:background="@drawable/custom_button_background"
            android:text="Customer"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_shopper"
                android:textAlignment="center"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/paid_color"
                android:text="Shopper"
                android:background="@drawable/custom_button_background"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
       android:layout_below="@+id/btngroup"
       android:layout_marginStart="10dp"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
